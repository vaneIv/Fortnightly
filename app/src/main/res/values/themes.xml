<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Fortnightly" parent="Theme.Material3.DayNight.NoActionBar">

        <!--Material color attributes-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="android:textColorSecondary">@color/textColorLight</item>
        <item name="tabTextColor">@color/textColorMedium</item>

        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Fortnightly.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Fortnightly.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Fortnightly.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Fortnightly.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Fortnightly.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Fortnightly.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Fortnightly.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Fortnightly.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Fortnightly.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Fortnightly.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Fortnightly.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Fortnightly.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Fortnightly.Overline</item>
    </style>

    <style name="Theme.Fortnightly" parent="Base.Theme.Fortnightly">
        <!--Appbar Headline Title-->
        <item name="titleTextAppearance">@style/TextAppearance.Fortnightly.Toolbar.Title</item>
        <!-- Status bar stuff. -->
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>
</resources>